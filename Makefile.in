##### How to compile stuff #####

# C library

$(MMDBOBJS): 
	$(CXX) $(CXXFLAGS) $(SHARED_LIB_CFLAGS) -I$(mmdbsrcdir) -c $(mmdbsrcdir)/`basename $@ .o`.cpp

$(CORELIBOBJS) $(CGENERALOBJS) $(CMTZOBJS) $(CMAPOBJS) $(CUCOBJS) \
            $(CSYMOBJS) $(UMTZOBJS) $(MMTZOBJS): 
	$(CC) $(CFLAGS) $(SHARED_LIB_CFLAGS) -I$(srcdir) -c $(srcdir)/`basename $@ .o`.c

$(FINTERFACEOBJS):
	$(CC) $(CFLAGS) $(SHARED_LIB_CFLAGS) -I$(srcdir) -c $(srcdir)/`basename $@ .o`.c

$(CMTZPYOBJS) $(CMAPPYOBJS) $(CSYMPYOBJS): 
	$(CC) $(CFLAGS) $(SHARED_LIB_CFLAGS) -I$(srcdir) -I$(PYTHON_INCLUDE) -c $(srcdir)/`basename $@ .o`.c

$(MMDBPYOBJS): 
	$(CXX) $(CXXFLAGS) $(SHARED_LIB_CFLAGS) -I$(mmdbsrcdir) -I$(PYTHON_INCLUDE) \
            -c $(mmdbsrcdir)/`basename $@ .o`.cpp

$(MMDBTCLOBJS): 
	$(CXX) $(CXXFLAGS) $(SHARED_LIB_CFLAGS) -I$(mmdbsrcdir) -I$(TCL_INCLUDE) \
            -c $(mmdbsrcdir)/`basename $@ .o`.cpp

$(CMTZTCLOBJS) $(CMAPTCLOBJS) $(CSYMTCLOBJS): 
	$(CC) $(CFLAGS) $(SHARED_LIB_CFLAGS) -I$(srcdir) -I$(TCL_INCLUDE) -c $(srcdir)/`basename $@ .o`.c

$(CMTZPLOBJS) $(CMAPPLOBJS) $(CSYMPLOBJS): 
	$(CC) $(CFLAGS) $(SHARED_LIB_CFLAGS) -I$(srcdir) -I$(PERL_INCLUDE) -c $(srcdir)/`basename $@ .o`.c

# Fortran code

#test to see if fsplit is in fsplit_dir already otherwise make it if you can
fsplit : $(srcdir)/fsplit.c
	test ! -x $(fsplit_dir)/fsplit && $(CC) $(CFLAGS) $(SHARED_LIB_CFLAGS) -o $(fsplit_dir)/fsplit fsplit.c || true 

$(LF)(parser.o) : $(srcdir)/parser.f
	-rm -rf parser.dir; mkdir parser.dir
	cd parser.dir && $(fsplit_dir)/fsplit $(srcdir)/parser.f && $(RMEMPTY);
# `-' for convex, sigh
	-if test ! -f parser.dir/parser.$F; then \
	  echo '      SUBROUTINE PRSER' > parser.dir/parser.$F; \
	  echo '      END' >> parser.dir/parser.$F; \
	fi
	cd parser.dir && \
	  for i in `pwd`/*.$F; do \
	    $(FC) -c $(FFLAGS) $(SHARED_LIB_FFLAGS) $$i; done\
	  && $(AR) ../$(LF) *.o
	rm -f parser.dir/*.o
parser : parser.o
	$(RANLIB) $(LF)

$(LF)(ccplib.o) : $(srcdir)/ccplib.f
	-rm -rf ccplib.dir; mkdir ccplib.dir
	echo '      SUBROUTINE CCPLIB' > ccplib.dir/ccplib.$F
	echo '      END' >> ccplib.dir/ccplib.$F
	cd ccplib.dir && $(fsplit_dir)/fsplit $(srcdir)/ccplib.f >/dev/null && $(RMEMPTY) && \
	  for i in `pwd`/*.$F; do \
	    $(FC) -c $(FFLAGS) $(SHARED_LIB_FFLAGS) $$i; done\
	  && $(AR) ../$(LF) *.o
	rm -f ccplib.dir/*.o
ccplib : ccplib.o
	$(RANLIB) $(LF)

$(LF)(lgglib.o) : $(srcdir)/lgglib.f
	-rm -rf lgglib.dir; mkdir lgglib.dir
	echo '      SUBROUTINE LGGLIB' > lgglib.dir/lgglib.$F
	echo '      END' >> lgglib.dir/lgglib.$F
	@$(SETFLAGS) ; \
	cd lgglib.dir && $(fsplit_dir)/fsplit $(srcdir)/lgglib.f >/dev/null && $(RMEMPTY) && \
	  for i in `pwd`/*.$F; do \
	    $(FC) -c  $${lgglib_FLAGS-"$(FFLAGS)"} $(SHARED_LIB_FFLAGS) $$i; done\
	  && $(AR) ../$(LF) *.o
	rm -f lgglib.dir/*.o
