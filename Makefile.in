	$(SHARE_MODULE) $(CSYMOBJS) $(CORELIBOBJS) $(CSYMTCLOBJS) -o $(CSYMTCLPACKAGE)

mmdb_tcl: $(MMDBTCLPACKAGE)

$(MMDBTCLPACKAGE): $(LMMDB) $(MMDBTCLOBJS)
