testlib : $(srcdir)/testlib.f  $(LF)
	$(FC) -o testlib $(FFLAGS) $(SHARED_LIB_FFLAGS) $(srcdir)/testlib.f $(LDFLAGS)

#
# standard targets
#

install-ccp4HEADERS: $(ccp4_HEADERS)
	if test ! -d $(DESTDIR)$(includedir)/ccp4; then mkdir $(DESTDIR)$(includedir)/ccp4; fi
	@list='$(ccp4_HEADERS)'; for p in $$list; do \
	  if test -f "$$p"; then d=; else d="$(srcdir)/"; fi; \
	  f="`echo $$p | sed -e 's|^.*/||'`"; \
	  echo " $(INSTALL_DATA) $$d$$p $(DESTDIR)$(includedir)/ccp4/$$f"; \
	  $(INSTALL_DATA) $$d$$p $(DESTDIR)$(includedir)/ccp4/$$f; \
	done

install-mmdbHEADERS: $(mmdb_HEADERS)
	if test ! -d $(DESTDIR)$(includedir)/mmdb; then mkdir $(DESTDIR)$(includedir)/mmdb; fi
	@list='$(mmdb_HEADERS)'; for p in $$list; do \
	  if test -f "$$p"; then d=; else d="$(mmdbsrcdir)/"; fi; \
	  f="`echo $$p | sed -e 's|^.*/||'`"; \
	  echo " $(INSTALL_DATA) $$d$$p $(DESTDIR)$(includedir)/mmdb/$$f"; \
	  $(INSTALL_DATA) $$d$$p $(DESTDIR)$(includedir)/mmdb/$$f; \
	done

uninstall-ccp4HEADERS:
	@list='$(ccp4_HEADERS)'; for p in $$list; do \
	  f="`echo $$p | sed -e 's|^.*/||'`"; \
	  echo " rm -f $(DESTDIR)$(includedir)/ccp4/$$f"; \
	  rm -f $(DESTDIR)$(includedir)/ccp4/$$f; \
	done

uninstall-mmdbHEADERS:
	@list='$(mmdb_HEADERS)'; for p in $$list; do \
	  f="`echo $$p | sed -e 's|^.*/||'`"; \
	  echo " rm -f $(DESTDIR)$(includedir)/mmdb/$$f"; \
	  rm -f $(DESTDIR)$(includedir)/mmdb/$$f; \
	done

install : all install-ccp4HEADERS install-mmdbHEADERS
	$(INSTALL_DATA) `pwd`/$(LMMDB) $(libdir)/$(LMMDB)
	$(INSTALL_DATA) `pwd`/$(LC) $(libdir)/$(LC)
	$(INSTALL_DATA) `pwd`/$(LF) $(libdir)/$(LF)
	$(RANLIB) $(libdir)/$(LMMDB)
	$(RANLIB) $(libdir)/$(LC)
	$(RANLIB) $(libdir)/$(LF)
	$(SHARE_INST)

uninstall : uninstall-ccp4HEADERS uninstall-mmdbHEADERS
	-rm -f $(libdir)/$(LMMDB) $(libdir)/$(LC) $(libdir)/$(LF)
	if [ -f $(libdir)/libccp4f.so ] ; then rm -f $(libdir)/libccp4f.so ; fi
	if [ -f $(libdir)/libccp4c.so ] ; then rm -f $(libdir)/libccp4c.so ; fi
	if [ -f $(libdir)/libmmdb.so ] ; then rm -f $(libdir)/libmmdb.so ; fi
	if [ -f $(libdir)/libccp4f.dylib ] ; then rm -f $(libdir)/libccp4f.dylib ; fi
	if [ -f $(libdir)/libccp4c.dylib ] ; then rm -f $(libdir)/libccp4c.dylib ; fi
	if [ -f $(libdir)/libmmdb.dylib ] ; then rm -f $(libdir)/libmmdb.dylib ; fi

clean :
	-rm -f core *.o *~ *.dir/*.o testlib disc.dft a.out *.orig *.rej defs.m4
	-rm -rf tagdir

realclean : clean
	-rm -rf $(LF) $(LC) $(LMMDB) *.dir TAGS unix.f fsplit
	if [ -f libccp4f.so ] ; then rm -f libccp4f.so ; fi
	if [ -f libccp4c.so ] ; then rm -f libccp4c.so ; fi
	if [ -f libmmdb.so ] ; then rm -f libmmdb.so ; fi  
	if [ -f libccp4f.dylib ] ; then rm -f libccp4f.dylib ; fi
	if [ -f libccp4c.dylib ] ; then rm -f libccp4c.dylib ; fi
	if [ -f libmmdb.dylib ] ; then rm -f libmmdb.dylib ; fi 

distclean : realclean
	-rm -f Makefile

test : testlib
	./testlib 

