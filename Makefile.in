$(CMTZPLPACKAGE): $(LCMTZ) $(CMTZPLOBJS)
	$(SHARE_MODULE) $(LCMTZ) $(CMTZPLOBJS) -o $(CMTZPLPACKAGE)

cmap_pl: $(CMAPPLPACKAGE)

$(CMAPPLPACKAGE): $(LCMAP) $(CMAPPLOBJS)
